<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:onClick="turnBluetoothOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/turnOff"
        android:text="TURN BLUETOOTH OFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>
    <Button
        android:onClick="findDivices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/find"
        android:text="FIND DISCOVERABLE DIVICES"
        app:layout_constraintTop_toBottomOf="@+id/turnOff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>
    <Button
        android:onClick="pairedDivices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paired"
        android:text="VIEW PAIRED DIVICES"
        app:layout_constraintTop_toBottomOf="@+id/find"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/paired"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>